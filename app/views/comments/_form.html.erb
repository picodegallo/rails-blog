<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter, "Your Name:" %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body, "Your Comment:" %><br />
    <%= f.text_area :body, :class => 'myform' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>