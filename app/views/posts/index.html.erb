
<% @post.reverse.each do |post| %>

  <div class="entry">
  <h2><a href='/posts/<%= post.id %>'><%= post.title %></a></h2>
  <div class="meta">
    <i class="icon-calendar"></i><%= post.created_at.strftime("Created at %m/%d/%Y")%>
    <span><i class="icon-comment"></i> <a href="#">2 Comments</a><span>
    <span class="pull-right">
      <%= link_to 'Show', post %> |
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </span>
  </div>

  <div class="row">
    <div class="span8">
       <div class="posts">
        <%= image_tag post.image_url.to_s if post.image? %>
          <p><%= post.text %></p>
      </div>
    </div>
  </div>
  <div class="button"><%= link_to 'Read More...', post %></div>
</div>
<% end %>

<%= render "posts/widget" %>