<h1>My Blog</h1>
<hr>

<% @post.each do |post| %>

  <h2><%= post.title %></h2>
  <p><%= post.text %></p>
  <br>
  <%= link_to 'Show', post %> |
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<hr>
<% end %>

<p><%= link_to 'New Post', new_post_path %><p>


